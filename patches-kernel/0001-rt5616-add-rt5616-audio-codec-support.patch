+	cnt += sprintf(buf, "RT5616 index register\n");
+	for (i = 0; i < 0xb4; i++) {
+		if (cnt + RT5616_REG_DISP_LEN >= PAGE_SIZE)
+			break;
+		val = rt5616_index_read(codec, i);
+		if (!val)
+			continue;
+		cnt += snprintf(buf + cnt, RT5616_REG_DISP_LEN,
+				"%02x: %04x\n", i, val);
+	}
+
+	if (cnt >= PAGE_SIZE)
+		cnt = PAGE_SIZE - 1;
+
+	return cnt;
