+		    {
+		       DBG("rk29_hw_params_rt5631:failed to set the sysclk for codec side\n"); 
+		   	   return ret;
+		   	}	    
+		#endif
+  
+
+        #if defined (CONFIG_SND_RK29_CODEC_SOC_MASTER) 
