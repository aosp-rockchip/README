+	mali_clock_pd = clk_get(NULL,GPUCLK_PD_NAME);
+	if (IS_ERR(mali_clock_pd))
+	{
+		MALI_PRINT( ("MALI Error : failed to get source mali pd\n"));
+		ret = MALI_FALSE;
