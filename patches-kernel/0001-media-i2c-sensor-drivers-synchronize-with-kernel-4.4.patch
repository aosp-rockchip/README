+static int __gc0403_start_stream(struct gc0403 *gc0403)
+{
+	int ret = 0;
+
+	/* In case these controls are set before streaming */
+	mutex_unlock(&gc0403->mutex);
+	ret = v4l2_ctrl_handler_setup(&gc0403->ctrl_handler);
+	mutex_lock(&gc0403->mutex);
+	if (ret)
