+/* Calculate the delay in us by clock rate and clock cycles */
+static inline u32 jx_h65_cal_delay(u32 cycles)
+{
+	return DIV_ROUND_UP(cycles, JX_H65_XVCLK_FREQ / 1000 / 1000);
