+static int __ov9750_stop_stream(struct ov9750 *ov9750)
+{
+	return ov9750_write_reg(ov9750->client, OV9750_REG_CTRL_MODE,
+				OV9750_REG_VALUE_08BIT, OV9750_MODE_SW_STANDBY);
+}
