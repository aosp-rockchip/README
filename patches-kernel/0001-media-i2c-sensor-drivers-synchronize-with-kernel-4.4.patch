+{
+	struct gc5025 *gc5025 = to_gc5025(sd);
+	const struct gc5025_mode *mode = gc5025->cur_mode;
+
+	mutex_lock(&gc5025->mutex);
+	fi->interval = mode->max_fps;
+	mutex_unlock(&gc5025->mutex);
+
+	return 0;
+}
