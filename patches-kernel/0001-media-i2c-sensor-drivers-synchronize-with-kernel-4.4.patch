+	int i, ret = 0;
+
+	i = 0;
+	while (regs[i].addr != REG_NULL) {
+		ret = bf3925_write(client, regs[i].addr, regs[i].value);
+		if (ret) {
+			dev_err(&client->dev, "%s failed !\n", __func__);
+			break;
+		}
+
+		i++;
+	}
+
+	return ret;
+}
