+static int __gc5035_stop_stream(struct gc5035 *gc5035)
+{
+	int ret;
+
+	ret = gc5035_write_reg(gc5035->client,
+		GC5035_REG_SET_PAGE,
+		GC5035_SET_PAGE_ONE);
+	ret |= gc5035_write_reg(gc5035->client,
+		GC5035_REG_CTRL_MODE,
+		GC5035_MODE_SW_STANDBY);
+	return ret;
+}
