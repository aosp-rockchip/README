+static int gc5035_set_exposure_reg(struct gc5035 *gc5035, u32 exposure)
+{
+	u32 caltime = 0;
+	int ret = 0;
+
+	caltime = exposure / 2;
+	caltime = caltime * 2;
+	gc5035->Dgain_ratio = 256 * exposure / caltime;
+	ret = gc5035_write_reg(gc5035->client,
+		GC5035_REG_SET_PAGE,
+		GC5035_SET_PAGE_ONE);
+
+	ret |= gc5035_write_reg(gc5035->client,
+		GC5035_REG_EXPOSURE_H,
+		(caltime >> 8) & 0x3F);
+	ret |= gc5035_write_reg(gc5035->client,
+		GC5035_REG_EXPOSURE_L,
+		caltime & 0xFF);
+
+	return ret;
+}
