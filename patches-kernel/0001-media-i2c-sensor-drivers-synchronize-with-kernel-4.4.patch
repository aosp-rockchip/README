+{
+	unsigned int i;
+
+	for (i = 0; i < GC5025_NUM_SUPPLIES; i++)
+		gc5025->supplies[i].supply = gc5025_supply_names[i];
+
+	return devm_regulator_bulk_get(&gc5025->client->dev,
+		GC5025_NUM_SUPPLIES,
+		gc5025->supplies);
+}
