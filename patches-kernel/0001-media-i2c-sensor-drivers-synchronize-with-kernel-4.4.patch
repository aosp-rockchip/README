+static struct i2c_driver ar0230_i2c_driver = {
+	.driver = {
+		.name = AR0230_NAME,
+		.pm = &ar0230_pm_ops,
+		.of_match_table = of_match_ptr(ar0230_of_match),
+	},
+	.probe		= &ar0230_probe,
+	.remove		= &ar0230_remove,
