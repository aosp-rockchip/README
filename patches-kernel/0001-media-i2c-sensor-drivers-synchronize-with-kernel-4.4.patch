+static int bf3925_configure_regulators(struct bf3925 *bf3925)
+{
+	unsigned int i;
+
+	for (i = 0; i < BF3925_NUM_SUPPLIES; i++)
+		bf3925->supplies[i].supply = bf3925_supply_names[i];
+
+	return devm_regulator_bulk_get(&bf3925->client->dev,
+				       BF3925_NUM_SUPPLIES,
+				       bf3925->supplies);
+}
