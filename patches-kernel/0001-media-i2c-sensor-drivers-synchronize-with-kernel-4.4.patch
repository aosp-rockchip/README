+static int ov9750_probe(struct i2c_client *client,
+			const struct i2c_device_id *id)
+{
+	struct device *dev = &client->dev;
+	struct device_node *node = dev->of_node;
+	struct ov9750 *ov9750;
+	struct v4l2_subdev *sd;
+	char facing[2];
