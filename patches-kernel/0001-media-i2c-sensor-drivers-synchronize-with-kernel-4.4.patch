+static int gc8034_write_array(struct i2c_client *client,
+	const struct regval *regs)
+{
+	u32 i = 0;
+	int ret = 0;
+
+	for (i = 0; ret == 0 && regs[i].addr != REG_NULL; i++)
+		ret = gc8034_write_reg(client, regs[i].addr, regs[i].val);
+
+	return ret;
+}
