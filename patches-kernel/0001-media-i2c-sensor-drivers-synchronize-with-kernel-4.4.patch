+	ov9750->pinctrl = devm_pinctrl_get(dev);
+	if (!IS_ERR(ov9750->pinctrl)) {
+		ov9750->pins_default =
+			pinctrl_lookup_state(ov9750->pinctrl,
+					     OF_CAMERA_PINCTRL_STATE_DEFAULT);
+		if (IS_ERR(ov9750->pins_default))
