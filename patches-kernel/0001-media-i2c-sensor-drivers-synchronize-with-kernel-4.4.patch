+	ret = ov9750_read_reg(client, OV9750_REG_CHIP_ID,
+			      OV9750_REG_VALUE_16BIT, &id);
+	if (id != CHIP_ID) {
+		dev_err(dev, "Unexpected sensor id(%04x), ret(%d)\n", id, ret);
