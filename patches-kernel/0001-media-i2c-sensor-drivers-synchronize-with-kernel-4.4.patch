+	ret = gc0403_write_reg(gc0403->client, PAGE_SELECT_REG, 0x03);
+	ret |= gc0403_write_reg(gc0403->client, GC0403_REG_MIPI_EN, 0x90);
+	ret |= gc0403_write_reg(gc0403->client, PAGE_SELECT_REG, 0x00);
