+	clk_disable_unprepare(imx327->xvclk);
+	if (!IS_ERR(imx327->reset_gpio))
+		gpiod_set_value_cansleep(imx327->reset_gpio, 0);
+	regulator_bulk_disable(IMX327_NUM_SUPPLIES, imx327->supplies);
