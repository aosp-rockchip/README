+static int __gc2385_stop_stream(struct gc2385 *gc2385)
+{
+	int ret;
+
+	ret = gc2385_write_reg(gc2385->client,
+		GC2385_REG_SET_PAGE, GC2385_SET_PAGE_ONE);
+	ret |= gc2385_write_reg(gc2385->client,
+		GC2385_REG_CTRL_MODE, GC2385_MODE_SW_STANDBY);
+	return ret;
+}
