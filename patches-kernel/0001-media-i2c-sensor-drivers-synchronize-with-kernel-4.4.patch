+		return  bf3925->ctrls.error;
+	}
+
+	sd = &bf3925->sd;
+	client->flags |= I2C_CLIENT_SCCB;
+#ifdef CONFIG_VIDEO_V4L2_SUBDEV_API
+	v4l2_i2c_subdev_init(sd, client, &bf3925_subdev_ops);
+
+	sd->internal_ops = &bf3925_subdev_internal_ops;
