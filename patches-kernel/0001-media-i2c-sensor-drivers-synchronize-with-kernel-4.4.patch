+/* Calculate the delay in us by clock rate and clock cycles */
+static inline u32 gc2385_cal_delay(u32 cycles)
+{
+	return DIV_ROUND_UP(cycles, GC2385_XVCLK_FREQ / 1000 / 1000);
+}
