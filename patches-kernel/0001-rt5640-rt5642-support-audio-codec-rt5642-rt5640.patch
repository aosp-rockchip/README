+int rt5640_update_eqmode(
+	struct snd_soc_codec *codec, int mode)
+{
+	struct rt56xx_ops *ioctl_ops = rt56xx_get_ioctl_ops();
+	int i;
+	static int eqmode;
+
+	if(codec == NULL ||  mode >= RT5640_HWEQ_LEN)
+		return -EINVAL;
