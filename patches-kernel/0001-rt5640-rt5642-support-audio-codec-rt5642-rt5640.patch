+					hweq_param[mode].ctrl);
+	snd_soc_update_bits(codec, RT5640_EQ_CTRL1,
+		RT5640_EQ_UPD, RT5640_EQ_UPD);
+	snd_soc_update_bits(codec, RT5640_EQ_CTRL1, RT5640_EQ_UPD, 0);
