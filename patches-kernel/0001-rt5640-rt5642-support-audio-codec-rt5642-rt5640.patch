+	cnt += sprintf(buf, "RT5640 index register\n");
+	for (i = 0; i < 0xb4; i++) {
+		if (cnt + RT5640_REG_DISP_LEN >= PAGE_SIZE)
+			break;
+		val = rt5640_index_read(codec, i);
+		if (!val)
+			continue;
+		cnt += snprintf(buf + cnt, RT5640_REG_DISP_LEN,
+				"%02x: %04x\n", i, val);
