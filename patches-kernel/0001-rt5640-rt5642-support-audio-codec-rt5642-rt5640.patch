+				(RT5640_CP_FQ_192_KHZ << RT5640_CP_FQ3_SFT));
+			rt5640_index_write(codec, RT5640_MAMP_INT_REG2, 0x1c00);
+			snd_soc_update_bits(codec, RT5640_DEPOP_M1,
+				RT5640_HP_CP_MASK | RT5640_HP_SG_MASK,
