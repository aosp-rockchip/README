+	for (i = 0; i <= RT5640_VENDOR_ID2; i++) {
+		if (cnt + RT5640_REG_DISP_LEN >= PAGE_SIZE)
+			break;
+		val = codec->hw_read(codec, i);
+		if (!val)
+			continue;
+		cnt += snprintf(buf + cnt, RT5640_REG_DISP_LEN,
+				"#rng%02x  #rv%04x  #rd0\n", i, val);
+	}
+
+	if (cnt >= PAGE_SIZE)
+		cnt = PAGE_SIZE - 1;
+
+	return cnt;
+}
