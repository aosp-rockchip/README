+	if (fwrq->e == 0 && fwrq->m < MAXCHANNEL) 
+	{
+		chan = fwrq->m;
+	}
+	else 
+	{
+		if (fwrq->e >= 6) 
+		{
+			fwrq->e -= 6;
+			while (fwrq->e--)
+				fwrq->m *= 10;
+		} 
+		else if (fwrq->e < 6) 
+		{
+			while (fwrq->e++ < 6)
+				fwrq->m /= 10;
+		}
+	
+		if (fwrq->m > 4000 && fwrq->m < 5000)
+			sf = WF_CHAN_FACTOR_4_G; 
+
+		chan = wf_mhz2channel(fwrq->m, sf);
+	}
+	chan = htod32(chan);	
+	if ((error = dev_wlc_ioctl(dev, WLC_SET_CHANNEL, &chan, sizeof(chan))))
