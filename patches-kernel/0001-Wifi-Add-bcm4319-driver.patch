+		/*
+			clear rate override
+			Since the is a/b/g-blind, both a/bg_rate are enforced.
+		*/
+		/* 0 is for clearing rate override */
+		err_bg = wl_dev_intvar_set(dev, "bg_rate", 0);
+		/* 0 is for clearing rate override */
+		err_a = wl_dev_intvar_set(dev, "a_rate", 0);
