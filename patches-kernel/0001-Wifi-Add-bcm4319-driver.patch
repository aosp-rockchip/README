+		WL_ERR(("set wsec error (%d)\n", err));
+		return err;
+	}
+
+	val = 0;	/* assume open key. otherwise 1 */
+	val = htod32(val);
+	if (unlikely((err = wl_dev_ioctl(dev, WLC_SET_AUTH, &val, sizeof(val))))) {
