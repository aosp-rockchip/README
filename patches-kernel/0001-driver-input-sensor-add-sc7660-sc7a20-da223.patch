+static int squareRoot(int val){
+    int r = 0;
+    int shift;
+
+    if (val < 0){
+        return 0;
+    }
+
+    for(shift=0;shift<32;shift+=2)
+    {
+        int x=0x40000000l >> shift;
+        if(x + r <= val)
+        {
+            val -= x + r;
+            r = (r >> 1) | x;
+        } else{
+            r = r >> 1;
+        }
+    }
+
+    return r;
+}
