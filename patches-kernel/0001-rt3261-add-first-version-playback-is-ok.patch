+ * Returns 0 for success or negative error code.
+ */
+static int rt3261_dsp_snd_effect(struct snd_soc_codec *codec)
+{
+	struct rt3261_priv *rt3261 = snd_soc_codec_get_drvdata(codec);
+	int ret;
+
+	ret = rt3261_dsp_conf(codec);
