+		param.addr = rt3261_dsp_p3_tab[i][1];
+		param.data = rt3261_dsp_p3_tab[i][2];
+		ret = rt3261_dsp_write(codec, &param);
+		if (ret < 0) {
+			dev_err(codec->dev, "Fail to patch Dsp: %d\n", ret);
+			goto patch_err;
+		}
+	}
+
+	return 0;
