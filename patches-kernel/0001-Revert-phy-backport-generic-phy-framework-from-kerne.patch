-	u32 default_spd[] = DEFAULT_SATA_SPD_SEL;
-	u32 default_txboost_gain[] = DEFAULT_SATA_TXBOOST_GAIN;
-	u32 default_txeye_direction[] = DEFAULT_SATA_TXEYEDIRECTION;
